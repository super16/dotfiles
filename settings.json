{
  "buffer_font_size": 14,
  "icon_theme": "Catppuccin Mocha",
  "languages": {
    "Python": {
      "format_on_save": "off",
      "language_servers": ["pylsp", "!pyright"],
      "preferred_line_length": 120
    }
  },
  "lsp": {
    "pylsp": {
      "binary": {
        "path": "pylsp"
      }
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "detect_venv": "off",
    "dock": "right",
    "font_family": "FiraMono Nerd Font Propo"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Monospace dark"
  },
  "ui_font_size": 16,
  "vim_mode": true
}
